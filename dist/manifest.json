{
    "manifest_version": 3,
    "name": "Save as MultiType",
    "version": "1.0",
    "description": "Save images (including WebP) as JPG or PNG with advanced options",
    "permissions": [
        "downloads",
        "contextMenus",
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
